<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.food.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.food.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.food.ui.details.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.food.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.food.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <action
        android:id="@+id/action_login_to_dashboard"
        app:destination="@id/dashboardFragment" />

    <action
        android:id="@+id/action_dashboard_to_details"
        app:destination="@id/detailsFragment" />

    <action
        android:id="@+id/action_dashboard_to_settings"
        app:destination="@id/settingsFragment" />

    <action
        android:id="@+id/action_dashboard_to_profile"
        app:destination="@id/profileFragment" />

</navigation>

